<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fond2"
    tools:context="owlinone.pae.password.PasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:textAlignment="center">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar6"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="0dp"
            app:title="@string/inscription"
            android:layout_gravity="center"
            android:animateLayoutChanges="false"
            />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:inputType="textCapSentences"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:layout_marginEnd="20dp"
            android:id="@+id/new_password_field"
            android:ems="10"
            android:hint="@string/newPassword"
            android:textColorHint="@color/colorGrey"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword|textCapSentences"
            android:ems="10"
            android:background="#11000000"
            android:hint="@string/reNewPassword"
            android:textColorHint="@color/colorGrey"
            android:textSize="16dp"
            android:id="@+id/renew_password_field"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="100dp"
            android:drawableLeft="@drawable/ic_action_pass"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/new_password_field"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/code_field"
            android:background="#11000000"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_mail"
            android:textColorHint="@color/colorGrey"
            android:hint="@string/codePassword"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/renew_password_field"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/background_signup"
            android:layout_below="@+id/code_field"
            android:layout_centerHorizontal="true"
            android:id="@+id/sign_up_new_password"
            android:text="@string/sign_up_password"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"

            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:clickable="true"
            />
    </RelativeLayout>
</LinearLayout>