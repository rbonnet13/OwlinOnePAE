<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fond2"
    tools:context="owlinone.pae.RegisterActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:textAlignment="center">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar6"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="0dp"
            app:title="@string/inscription"
            android:layout_gravity="center"
            app:titleMarginStart="20dp"
            android:animateLayoutChanges="false"
            />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo_esaip_2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_marginEnd="20dp"
        android:id="@+id/username_field"
        android:ems="10"
        android:hint="Pseudo"
        android:textColorHint="@color/colorWhite"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewLogo"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#11000000"
        android:hint="Mot de passe"
        android:textColorHint="@color/colorWhite"
        android:textSize="16dp"
        android:id="@+id/password_field"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhite"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username_field"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_field"
        android:background="#11000000"
        android:layout_marginRight="20dp"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/ic_action_mail"
        android:textColorHint="@color/colorWhite"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_field"
   />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/background_signup"
        android:layout_below="@+id/email_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_up"
        android:text="@string/sign_up2"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"

        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:clickable="true"
        />
    </RelativeLayout>
    </LinearLayout>