<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:textAlignment="center">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar50"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="0dp"
            app:title="@string/compte"
            android:layout_gravity="center"
            app:titleMarginStart="20dp"
            android:animateLayoutChanges="false"
            />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11000000"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_action_name"
            android:id="@+id/user_field"
            android:ems="10"
            android:hint="Pseudo"
            android:textColorHint="@color/colorWhite"
            android:inputType="textCapSentences"
            android:textSize="16dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/nom_user"
            android:textSize="16dp"
            android:layout_below="@+id/user_field"
            android:layout_alignLeft="@+id/user_field"
            android:inputType="textCapSentences"
            android:layout_alignStart="@+id/user_field"
            android:background="#11000000"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_nom_user"
            android:hint="Nom"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/prenom_user"
            android:inputType="textCapSentences"
            android:textSize="16dp"
            android:layout_below="@+id/nom_user"
            android:layout_alignLeft="@+id/user_field"
            android:layout_alignStart="@+id/user_field"
            android:background="#11000000"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_nom_user"
            android:hint="Prénom"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/user_email"
            android:textSize="16dp"
            android:layout_below="@+id/prenom_user"
            android:layout_alignLeft="@+id/user_field"
            android:layout_alignStart="@+id/user_field"
            android:background="#11000000"
            android:inputType="textEmailAddress"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_mail"
            android:hint="Email"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/user_telephone"
            android:textSize="16dp"
            android:inputType="numberSigned"
            android:layout_below="@+id/user_email"
            android:layout_alignLeft="@+id/user_field"
            android:layout_alignStart="@+id/user_field"
            android:background="#11000000"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_action_tel"
            android:hint="Téléphone"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/adresse_user"
            android:textSize="16dp"
            android:layout_below="@+id/user_telephone"
            android:layout_alignLeft="@+id/user_field"
            android:layout_alignStart="@+id/user_field"
            android:background="#11000000"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_adresse_user"
            android:hint="Adresse"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/code_postal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/adresse_user"
            android:layout_below="@+id/adresse_user"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_adresse_user"
            android:ems="5"
            android:inputType="numberSigned"
            android:hint="Code Postal"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/ville_user"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:textSize="16dp"
            android:layout_below="@+id/code_postal"
            android:layout_alignLeft="@+id/user_field"
            android:background="#11000000"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:inputType="textCapSentences"
            android:drawableLeft="@drawable/ic_adresse_user"
            android:hint="Ville"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/save_user"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/background_signup"
            android:layout_centerHorizontal="true"
            android:text="Sauvegarder"
            android:layout_below="@+id/ville_user"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:clickable="true"
            />

    </RelativeLayout>
    </ScrollView>
</LinearLayout>
